<resources>
<!-- Round shape style for TextView starting from Right side 

for Example...
	<TextView
        android:id="@+id/tvforget"
        android:text="Forgot password?"
        style="@style/myTextViewStyle_Shape_rounded_rect.WHITE" />
    <TextView
        android:id="@+id/tvregister"
        android:text="Register me"
        style="@style/myTextViewStyle_Shape_rounded_rect.WHITE" />
-->

	<style name="myTextViewStyle_Shape_rounded_rect">    
	  	<item name="android:layout_width">wrap_content</item>  
	    <item name="android:layout_height">wrap_content</item>  
	    <item name="android:padding">5dp</item>  
	    <item name="android:textAlignment">textEnd</item>  
	    <item name="android:textStyle">italic</item>  
	    <item name="android:layout_gravity">center</item>  
	    <item name="android:layout_marginBottom">10dp</item>  
	    <item name="android:background">@drawable/shape_rounded_white_rect</item>  
	    <item name="android:textColor">@drawable/selector_color</item>            
	</style>

	<style name="myTextViewStyle_Shape_rounded_rect.WHITE">
		<item name="android:background">@drawable/shape_rounded_white_rect</item>  
	</style>
	<style name="myTextViewStyle_Shape_rounded_rect.BLUE">    
		<item name="android:background">@drawable/shape_rounded_blue_rect</item>  
	</style>
	<style name="myTextViewStyle_Shape_rounded_rect.CRIMSON">    
		<item name="android:background">@drawable/shape_rounded_crimson_rect</item>  
	</style>
	<style name="myTextViewStyle_Shape_rounded_rect.INDIANRED">    
		<item name="android:background">@drawable/shape_rounded_indianred_rect</item>  
	</style>
<!-- end Round shape style for Text View starting from Right side-->


